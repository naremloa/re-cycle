{
  "name": "re-cycle",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.4",
  "scripts": {
    "dev": "vite",
    "type-check": "vue-tsc --noEmit -p tsconfig.client.json && tsc --noEmit -p tsconfig.server.json && tsc --noEmit -p tsconfig.node.json",
    "build:client": "vite build --mode client",
    "build:server": "vite build --mode server",
    "build": "bun run type-check && bun run build:client && bun run build:server",
    "preview": "wrangler pages dev dist",
    "deploy": "wrangler pages deploy dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply re-cycle-db --local",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.8",
    "markdown-it": "^14.1.0",
    "ofetch": "^1.5.1",
    "radash": "^12.1.1",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.5.1",
    "@cloudflare/workers-types": "^4.20251209.0",
    "@hono/vite-dev-server": "^0.23.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vue-tsc": "^3.1.8",
    "wrangler": "^4.53.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
